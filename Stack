package LabAct4;
import java.util.Stack;

public class StackNameArranger {
	
	public static void arrangeNames(Stack<String> nameStack) {
		Stack<String> tempStack = new Stack<>();
		
		// Pop all names from original stack and push to temp stack
		while (!nameStack.isEmpty()) {
			tempStack.push(nameStack.pop());
		}
		
		// Display names in order
		int count = 1;
		while (!tempStack.isEmpty()) {
			System.out.println(count + ". " + tempStack.pop());
			count++;
		}
	}
	
	public static void main(String[] args) {
		Stack<String> nameStack = new Stack<>();
		
		// Push names onto the stack
		nameStack.push("ETHAN J. DELA CRUZ");
		nameStack.push("CHRISTIAN M. SANTOS");
		nameStack.push("MARK L. GARCIA");
		nameStack.push("GABRIEL V. TORRES");
		nameStack.push("KYLE R. FLORES");
		nameStack.push("SOFIA N. REYES");
		nameStack.push("ANDREA G. MENDOZA");
		nameStack.push("NICOLE F. RAMOS");
		nameStack.push("JASMINE D. CRUZ");
		nameStack.push("ANGEL K. GONZALES");
		
		// Display header
		System.out.println("LAB ACT 4: STACK");
		System.out.println("ARRANGE THE FOLLOWING IN ORDER USING STACK:");
		System.out.println();
		System.out.println("ORDER: SURNAME, FIRSTNAME MIDDLEINITIAL");
		System.out.println();
		
		// Arrange and display names using stack
		arrangeNames(nameStack);
	}
}
